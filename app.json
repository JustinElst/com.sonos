{
	"id": "com.sonos",
	"version": "2.0.0",
	"compatibility": ">=1.0.0",
	"name": {
		"en": "Sonos"
	},
	"author": {
		"name": "Athom B.V.",
		"website": "https://www.athom.com"
	},
	"images": {
		"large": "/assets/images/large.jpg",
		"small": "/assets/images/small.jpg"
	},
	"drivers": [
		{
			"id": "sonos",
			"name": {
				"en": "Sonos"
			},
			"class": "speaker",
			"capabilities": [ "speaker_playing", "speaker_prev", "speaker_next", "volume_set" ],
			"capabilitiesOptions": {
				"speaker_playing": {
					"title": " "
				},
				"speaker_prev": {
					"title": " "
				},
				"speaker_next": {
					"title": " "
				}
			},
			"mobile": {
				"components": [
					{
						"id": "icon",
						"capabilities": []
					},
					{
						"id": "button",
						"capabilities": [ "speaker_prev", "speaker_playing", "speaker_next" ],
						"options": {
							"toggle": [ "speaker_playing" ],
							"icons": {
								"speaker_prev": "drivers/sonos/assets/mobile/prev.svg",
								"speaker_next": "drivers/sonos/assets/mobile/next.svg",
								"speaker_playing": {
									"true": "drivers/sonos/assets/mobile/pause.svg",
									"false": "drivers/sonos/assets/mobile/play.svg"
								}
							}
						}
					},
					{
						"id": "slider",
						"capabilities": [ "volume_set" ]
					}
				]
			},
			"pair": [
				{
					"id": "list_devices",
					"template": "list_devices",
					"navigation": {
						"next": "add_devices"
					}
				},
				{
					"id": "add_devices",
					"template": "add_devices"
				}
			]
		}
	],
	"flow": {
		"actions": [
			{
				"id": "play",
				"title": {
					"en": "Play"
				},
				"args": [
					{
						"type": "device",
						"name": "device",
						"filter": {
							"driver_id": "sonos",
							"capabilities": "speaker_playing"
						}
					}
				]
			},
			{
				"id": "pause",
				"title": {
					"en": "Pause"
				},
				"args": [
					{
						"type": "device",
						"name": "device",
						"filter": {
							"driver_id": "sonos",
							"capabilities": "speaker_playing"
						}
					}
				]
			},
			{
				"id": "prev",
				"title": {
					"en": "Previous"
				},
				"args": [
					{
						"type": "device",
						"name": "device",
						"filter": {
							"driver_id": "sonos",
							"capabilities": "speaker_prev"
						}
					}
				]
			},
			{
				"id": "next",
				"title": {
					"en": "Next"
				},
				"args": [
					{
						"type": "device",
						"name": "device",
						"filter": {
							"driver_id": "sonos",
							"capabilities": "speaker_next"
						}
					}
				]
			},
			{
				"id": "volume_set",
				"title": {
					"en": "Set volume"
				},
				"args": [
					{
						"type": "device",
						"name": "device",
						"filter": {
							"driver_id": "sonos",
							"capabilities": "volume_set"
						}
					},
					{
						"type": "range",
						"name": "volume",
						"min": 0,
						"max": 1,
						"step": 0.01,
						"label": "%",
						"labelMultiplier": 100,
						"labelDecimals": 0
					}
				]
			}
		]
	}
}